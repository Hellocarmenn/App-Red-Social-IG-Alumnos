<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Poner el modo obscuro -->
    <style name="Theme.AppRedSocialIGAlumnos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashScreen" parent="Theme.AppRedSocialIGAlumnos">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="BottomNavView" parent="Theme.AppRedSocialIGAlumnos">
        <item name="backgroundTint">@color/black</item>
        <item name="itemRippleColor">@color/black</item>
    </style>

    <style name="ToolBar" parent="Theme.AppRedSocialIGAlumnos">
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ItemPostRV" parent="Widget.Material3.CardView.Elevated">
        <item name="backgroundTint">@color/black</item>
    </style>

    <style name="TextPosts" parent="Theme.AppRedSocialIGAlumnos">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDescPosts" parent="Theme.AppRedSocialIGAlumnos">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ProfileIcon" parent="Theme.AppRedSocialIGAlumnos">
        <item name="civ_circle_background_color">@color/black</item>
        <item name="android:src">@drawable/ic_user</item>
    </style>

    <style name="EditTextComment" parent="ThemeOverlay.Material3.TextInputEditText.FilledBox">
        <item name="boxBackgroundColor">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
    </style>

</resources>